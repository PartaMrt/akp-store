generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://admin:admin@db:5432/AKP"//"postgresql://admin:admin@localhost:5432/AKP?AKP=public"//env("DATABASE_URL")
}

model Product {
  id                    String   @db.Uuid @id @default(uuid())
  sku                   String   @unique
  slug                  String   @unique
  name                  String
  description           String
  price                 Decimal @db.Decimal(10, 2) 
  imageUrl              String?
  stockQuantity         Int
  minimumOrderQuantity  Int
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

